{
  "compilerOptions": {
    "baseUrl": "src/",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/components/*": ["components/*"],
      "@/helpers/*": ["helpers/*"],
      "@/hooks/*": ["hooks/*"],
      "@/mocks/*": ["__mocks__/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
